@model FlipkartClone.Models.Address

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
        <h5 class="fw-bold mb-4">Add Delivery Address</h5>
        
        <form asp-action="Create">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label small text-muted">FULL NAME</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label small text-muted">PHONE NUMBER</label>
                    <input asp-for="PhoneNumber" class="form-control" type="number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label small text-muted">PIN CODE</label>
                    <input asp-for="ZipCode" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label small text-muted">STATE</label>
                    <input asp-for="State" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label small text-muted">CITY</label>
                <input asp-for="City" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label small text-muted">ADDRESS (House No, Building, Street, Area)</label>
                <textarea asp-for="StreetAddress" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary fw-bold py-2" style="background-color: #fb641b; border: none;">SAVE ADDRESS</button>
                <a asp-action="Index" class="btn btn-link text-decoration-none">Cancel</a>
            </div>
        </form>
    </div>
</div>