@model IEnumerable<FlipkartClone.Models.Address>

<div class="container mt-4" style="min-height: 80vh;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>My Addresses</h4>
        <a asp-action="Create" class="btn btn-primary fw-bold">+ ADD NEW ADDRESS</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No addresses saved yet. Add one!</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <span class="badge bg-secondary mb-2">HOME</span>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Delete this address?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                            
                            <h6 class="fw-bold">@item.FullName <span class="ms-2 text-muted fw-normal">@item.PhoneNumber</span></h6>
                            <p class="card-text text-muted small">
                                @item.StreetAddress, @item.City, @item.State - <strong>@item.ZipCode</strong>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>