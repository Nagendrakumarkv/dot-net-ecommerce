@model IEnumerable<FlipkartClone.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    // Get current filters to keep them in the form when submitting
    var searchStr = Context.Request.Query["searchString"];
    var sortOrder = ViewData["CurrentSort"] as string;
}

@if (string.IsNullOrEmpty(searchStr))
{
    <div id="mainCarousel" class="carousel slide mb-4 shadow-sm" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://rukminim1.flixcart.com/fk-p-flap/1600/270/image/b8e07ff39439d998.jpg?q=20"
                    class="d-block w-100" style="height: 280px; object-fit: cover;">
            </div>
            <div class="carousel-item">
                <img src="https://rukminim1.flixcart.com/fk-p-flap/1600/270/image/352e6f0f8034fab5.jpg?q=20"
                    class="d-block w-100" style="height: 280px; object-fit: cover;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
}

<div class="container-fluid pt-2">
    <div class="row">

        <div class="col-md-2 border-end bg-white pt-3 d-none d-md-block" style="min-height: 80vh;">
            <h5 class="fw-bold">Filters</h5>
            <hr />

            <form asp-action="Index" method="get">
                <input type="hidden" name="searchString" value="@searchStr" />
                <input type="hidden" name="sortOrder" value="@sortOrder" />

                <div class="mb-3">
                    <label class="form-label small text-muted">PRICE</label>
                    <div class="d-flex align-items-center">
                        <input type="number" name="minPrice" class="form-control form-control-sm" placeholder="Min"
                            value="@Context.Request.Query["minPrice"]">
                        <span class="mx-1 text-muted">-</span>
                        <input type="number" name="maxPrice" class="form-control form-control-sm" placeholder="Max"
                            value="@Context.Request.Query["maxPrice"]">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-sm w-100 mt-2">Apply Filters</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm w-100 mt-2">Clear</a>
            </form>
        </div>

        <div class="col-md-10">

            <div class="d-flex justify-content-between align-items-center mb-3 bg-white p-3 shadow-sm rounded">
                <span class="fw-bold">Showing @Model.Count() Items</span>

                <div class="dropdown">
                    <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Sort By
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="newest"
                                asp-route-searchString="@searchStr">Newest First</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_asc"
                                asp-route-searchString="@searchStr">Price -- Low to High</a></li>
                        <li><a class="dropdown-item" asp-action="Index" asp-route-sortOrder="price_desc"
                                asp-route-searchString="@searchStr">Price -- High to Low</a></li>
                    </ul>
                </div>
            </div>

            <div class="row">
                @if (!Model.Any())
                {
                    <div class="col-12 text-center mt-5">
                        <img src="https://rukminim1.flixcart.com/www/800/800/promos/16/05/2019/d438a32e-765a-4d8b-b4a6-520b560971e8.png?q=90"
                            width="200" />
                        <h4 class="mt-3">Sorry, no results found!</h4>
                        <p class="text-muted">Please check the spelling or try searching for something else</p>
                    </div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100 product-card">
                                <div class="text-center p-3">
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                        style="height: 150px; object-fit: contain;">
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@item.Title">@item.Title</h6>
                                    <p class="card-text text-muted small mb-1">@item.Category.Name</p>

                                    <div class="d-flex align-items-center">
                                        <span class="fw-bold fs-5">₹@item.Price</span>
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-top-0 pt-0">
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"
                                        class="btn btn-primary w-100 btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>