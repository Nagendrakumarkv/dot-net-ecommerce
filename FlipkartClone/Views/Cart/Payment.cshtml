@model List<FlipkartClone.Models.CartItem>
@{
    var total = Model.Sum(x => x.Total);
}

<div class="container mt-5 text-center">
    <div class="card shadow p-5 mx-auto" style="max-width: 500px;">
        <h3 class="fw-bold text-secondary mb-4">Payment Options</h3>

        <div class="alert alert-info text-start">
            <strong>Total Amount:</strong> ₹@total
        </div>

        <div class="text-start mb-4">
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="payment" checked>
                <label class="form-check-label">UPI / Wallets</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="payment">
                <label class="form-check-label">Credit / Debit Card</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="payment">
                <label class="form-check-label">Cash on Delivery</label>
            </div>
        </div>

        <form asp-controller="Payment" asp-action="Index" method="post">

            <input type="hidden" name="addressId" value="@ViewBag.AddressId" />

            <button type="submit" class="btn btn-success w-100 btn-lg shadow-sm">
                PAY ₹@Model.Sum(x => x.Total)
            </button>
        </form>
    </div>
</div>