@model int

<div class="container mt-5 text-center" style="min-height: 70vh;">
    <div class="card shadow p-5 mx-auto" style="max-width: 600px;">
        <div class="mb-4 text-success">
            <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
        </div>
        
        <h2 class="fw-bold mb-3">Order Placed Successfully!</h2>
        <p class="text-muted">Thank you for your purchase. Your order has been received and is being processed.</p>
        
        <div class="alert alert-light border">
            <strong>Order ID:</strong> #@Model <br>
            <span class="small text-muted">Keep this ID for your reference.</span>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">Continue Shopping</a>
            <a href="#" class="btn btn-outline-dark px-4">View My Orders</a>
        </div>
    </div>
</div>