@model FlipkartClone.Models.Category

<div class="container mt-4" style="max-width: 600px;">
    <h2>Create Category</h2>
    <form asp-action="Create" class="bg-white p-4 border rounded shadow-sm">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="e.g. Mobiles" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" value="1" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Create</button>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Back</a>
    </form>
</div>