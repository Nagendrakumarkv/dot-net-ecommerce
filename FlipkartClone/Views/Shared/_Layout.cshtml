@using Microsoft.AspNetCore.Http
@using FlipkartClone.Extensions
@using FlipkartClone.Models
@inject IHttpContextAccessor HttpContextAccessor
@{
    // Retrieve cart from session
    var cart = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<List<CartItem>>("Cart");
    // Count items (if cart is null, count is 0)
    int count = cart != null ? cart.Sum(item => item.Quantity) : 0;
}

@using FlipkartClone.Constants
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlipkartClone</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg fk-navbar fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    FlipkartClone <span style="color:#f4bd0d; font-size: 10px;">Plus</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">

                    <div class="mx-auto d-none d-md-block">
                        <form asp-controller="Home" asp-action="Index" method="get" class="fk-search-container">
                            <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
                                class="fk-search-input" placeholder="Search for products, brands and more">
                            <button type="submit" class="fk-search-btn"><i class="bi bi-search"></i></button>
                        </form>
                    </div>

                    <ul class="navbar-nav align-items-center">

                        <partial name="_LoginPartial" />
                        @if (User.IsInRole(Roles.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-controller="Category"
                                    asp-action="Index">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-controller="Product"
                                    asp-action="Index">Products</a>
                            </li>
                        }

                        <li class="nav-item ms-3">
                            <a class="nav-link position-relative d-inline-flex align-items-center" asp-controller="Cart"
                                asp-action="Index">
                                <i class="bi bi-cart-fill" style="font-size: 1.2rem;"></i>
                                <span class="ms-1">Cart</span> @if (count > 0)
                                {
                                    <span class="position-absolute badge rounded-pill bg-danger"
                                        style="font-size: 0.6rem; top: 2px; left: 18px;">
                                        @count
                                    </span>
                                }
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - FlipkartClone - <a asp-area="" asp-controller="Home" asp-action="Privacy"
                class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>